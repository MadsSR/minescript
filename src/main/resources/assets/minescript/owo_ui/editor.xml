<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/0.8/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <EditBoxWidget id="edit-box">
                            <margins>
                                <all>10</all>
                            </margins>
                        </EditBoxWidget>
                        <button id="run-button">
                            <text>Save and Run</text>
                            <margins>
                                <bottom>10</bottom>
                            </margins>
                        </button>
                    </children>
                    <surface>
                        <panel dark="true"/>
                    </surface>
                    <horizontal-alignment>center</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                </flow-layout>
            </children>
            <surface>
                <vanilla-translucent/>
            </surface>
            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>
        </flow-layout>
    </components>
</owo-ui>